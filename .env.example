SECRET_KEY="your-secret-key-change-this-in-production"
API_KEY_PREFIX=llm-router-
DEBUG=true
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
# For development (SQLite)
DATABASE_URL=sqlite:///./llm_router.db

# For production (PostgreSQL)
# DATABASE_URL=postgresql://username:password@localhost:5432/llm_router

# Redis Configuration  
# For development (local Redis)
REDIS_URL=redis://localhost:6379/0

# For production (Redis with password)
# REDIS_URL=redis://:password@localhost:6379/0

# Provider API Keys (add only the ones you want to use)
# ======================================================

# OpenAI API Key
OPENAI_API_KEY="your-openai-api-key-here"

# Google Gemini API Key
GEMINI_API_KEY="your-gemini-api-key-here"

# Groq API Key
GROQ_API_KEY="your-groq-api-key-here"

# Provider Base URLs (optional - defaults provided)
# =================================================

# Gemini OpenAI-compatible endpoint
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta/openai/

# Groq OpenAI-compatible endpoint
GROQ_BASE_URL=https://api.groq.com/openai/v1

# CORS Configuration
# ==================
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://localhost:5173"]

# Rate Limiting
# =============
DEFAULT_RATE_LIMIT=1000

# Monitoring (Optional)
# ====================
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id